<div class="album-card"> 
  <div class='photo'>
    {{#each images}} 
      {{#if @first}}   
      <img src={{ url }}>
      {{/if}}
    {{/each}}
  </div>  
  <div class="details">
    <p>{{ name }}</p>
    <button onclick="window.location.href = '/album/:album_id/{{id}}'">View tracks</button>
  </div> 
</div>